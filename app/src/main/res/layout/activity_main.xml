<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="9"
        android:rowCount="8">
        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/gep1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/heart2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/gep2"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:src="@drawable/heart2" />

        <ImageView
            android:id="@+id/gep3"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:src="@drawable/heart2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gép"
            android:layout_column="3"
            android:layout_columnWeight="2"
            android:layout_row="0"
            android:layout_gravity="center_vertical|left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:layout_column="4"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Játékos"
            android:layout_column="5"
            android:layout_columnWeight="2"
            android:layout_row="0"
            android:layout_gravity="center_vertical|right"/>

        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/user1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/heart2"
            android:layout_column="6"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/user2"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/heart2"
            android:layout_column="7"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/user3"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/heart2"
            android:layout_column="8"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_gravity="center"/>





        <TextView
            android:id="@+id/dontetlenek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Döntetlenek száma: 0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_columnSpan="9"
            android:layout_rowWeight="1"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/userKep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/paper"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_columnSpan="9"
            android:layout_rowWeight="1"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/valasztasom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A te választásod"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_columnSpan="9"
            android:layout_rowWeight="1"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/gepKep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/paper"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_columnSpan="9"
            android:layout_rowWeight="1"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/gepValasztasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gép választása"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="5"
            android:layout_columnSpan="9"
            android:layout_rowWeight="1"
            android:layout_gravity="center"/>
         <!--<TextView
            android:id="@+id/eredmeny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="6"
            android:layout_columnSpan="9"
            android:layout_rowWeight="1"
            android:layout_gravity="center"/>-->
        <ImageView
            android:id="@+id/ko"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_columnSpan="3"
            android:layout_row="7"
            android:src="@drawable/rock"/>
        <ImageView
            android:id="@+id/papir"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1"
            android:layout_row="7"
            android:src="@drawable/paper" />

        <ImageView
            android:id="@+id/ollo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="7"
            android:layout_column="6"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1"
            android:src="@drawable/scissors" />

    </GridLayout>




</androidx.constraintlayout.widget.ConstraintLayout>